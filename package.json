{
  "name": "spoeck",
  "version": "0.0.10",
  "description": "Specification pattern implementation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "watch": "jest --watchAll",
    "doc": "typedoc --options ./typedocconfig.ts",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "all": "npm run test && npm run build && npm run doc"
  },
  "keywords": [
    "DDD",
    "Specification",
    "pattern"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SachaCR/spoeck.git"
  },
  "bugs": {
    "url": "https://github.com/SachaCR/spoeck/issues"
  },
  "homepage": "https://github.com/SachaCR/spoeck#readme",
  "author": "SachaCR",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "@types/node": "^12.7.1",
    "@typescript-eslint/eslint-plugin": "^2.0.0",
    "@typescript-eslint/parser": "^2.0.0",
    "eslint": "^6.2.1",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.7.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text-summary"
    ],
    "verbose": false
  }
}
